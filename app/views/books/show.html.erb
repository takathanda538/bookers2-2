<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag 'no_image.jpg' %>
       <table class="table">
        <tbody>
          <tr>
            <th><p>name</p></th>
            <th><%= @user.name%></th>
          </tr>
          <tr>
            <th><p>introduction</p></th>
            <th><%= @user.introduction%></th>
          </tr>
        </tbody>
      </table>
      <a class="btn btn-outline-secondary btn-block edit_user_36211" href="/users/36211/edit">
        <i class="fas fa-user-cog"></i>
      </a>
      <%= form_with model: @book do |f| %>
        <div class="field">
        <label>Title</label>
          <%= f.text_field :title %>
        </div>
        <div class="field">
        <label>Opinion</label>
          <%= f.text_area :body %>
        </div>
        <div class="actions">
          <%= f.submit 'Create Book'%>
        </div>  
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td><%= image_tag 'no_image.jpg' %></td>
            <td><%= @book.title%></td>
            <td><%= @book.body%></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
